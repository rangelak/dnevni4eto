<div class="card card-body">
	<h3>Нов запис</h3>
	<form action="/stories" method="post">
		<div class="form-group">
			<label for="title">Заглавие</label>
			<input type="text" class="form-control" name="title" value = "{{title}}" required="true">
		</div>
		<div class="form-group">
			<label for="details">Детайли</label>
			<textarea class="form-control" name="details" value = "{{details}}" required="true"></textarea>
		</div>
		<button type="submit" class="btn btn-dark">Запиши</button>
	</form>
</div>